@page
@using TemplatesWeb.Components

@model IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="terminal-container centerOnPage">
    <div class="terminal">
        <h1 class="line1 terminal-command" id="index-terminal-command">dotnet new <span class="cursor1">_</span></h1>
    </div>
</div>

<form id="search-form" class="centerOnPage" method="POST" action="/">
    <input asp-for="SearchText" required autofocus />
    <fast-anchor id="search-link" href="#" onclick="document.getElementById('search-form').submit();" class="button4">Search</fast-anchor>
</form>
<div id="overallStats" class="centerOnPage">
    <span id="overallDownloads">downloads: <integer>@String.Format("{0:n0}", @Model.Stats.NumDownloads)</integer></span>
    <span id="overallTemplates">templates: <integer>@String.Format("{0:n0}", @Model.Stats.NumTemplates)</integer></span>
    <!-- Num template packs: @Model.Stats.NumTemplatePacks -->
</div>

<section class="template-pack-container">
    @foreach (var tp in Model.TemplatePacks) {
        <component type="typeof(TemplatePackView)" render-mode="ServerPrerendered" param-TemplatePack="@tp" />
    }
</section>
<div class="pager-container">
<ul class="pager">
    @if (Model.PreviousLink.IsEnabled) {
        <li class="i-prevlink">
            <a href="@(Model.PreviousLink.LinkHref)"> Previous </a>
        </li>
    }
    @if (Model.NextLink.IsEnabled) {
        <li class="i-nextlink">
            <a href="@Model.NextLink.LinkHref"> Next </a>
        </li>
    }
</ul>
</div>














